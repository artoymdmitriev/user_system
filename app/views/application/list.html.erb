<div class="container list-text">
  <% @users.each do |user| %>      
    <div class="row">
      <div class="col-6 col-lg-4">
        <%= user.email %>
      </div>
      <div class="col-6 col-lg-3">
        <%= user.provider != nil ? user.provider.capitalize! + ' account' : 'Local account' %>
      </div>
      <div class="col-6 col-lg-1">
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Action
            <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <%= user.is_blocked ? link_to("Unblock", unblock_user_path(user), class: "btn btn-small btn-success") : link_to("Block", block_user_path(user), class: "btn btn-small btn-warning") %>
              <%= link_to "Delete", delete_user_path(user), class: "btn btn-small btn-danger" %>
            </ul>
          </div>
      </div>
    </div>
  <% end %>  
</div>